{% extends "layouts/front-end/base.njk" %}
{% set active_menu_item = "home" %}

{% block title %}Détails de l'auteur{% endblock %}
{% set bubble_color = "violet" %}

{% block main %}
<section class="grid grid-cols-1 lg:grid-cols-[1fr_24rem] gap-x-6 gap-y-4 mb-6">
    <h1 class="text-3xl font-bold lg:col-span-2 mt-6 lg:mt-0">Détails de l'auteur</h1>

    <div class="bg-white shadow-md rounded-xl p-6 flex flex-col items-center text-center">
        <img src="{{ author.image }}" alt="Photo de {{ author.firstname }} {{ author.lastname }}" 
             class="w-32 h-32 rounded-full object-cover border-4 border-gray-200 shadow-lg">
        <h2 class="text-2xl font-semibold mt-4">{{ author.firstname }} {{ author.lastname }}</h2>
        <p class="text-gray-500 text-sm">{{ author.email }}</p>

        {% if author.bio %}
            <p class="text-gray-700 mt-4 text-sm">{{ author.bio }}</p>
        {% else %}
            <p class="text-gray-400 mt-4 text-sm italic">Aucune biographie</p>
        {% endif %}
    </div>

    <div class="bg-white shadow-md rounded-xl p-6">
        <h3 class="text-xl font-semibold mb-4">Articles rédigés</h3>
        {% if author.list_articles and author.list_articles | length > 0 %}
            <ul class="space-y-3">
                {% for article in author.list_articles %}
                    <li class="border-b pb-2">
                        <a href="/articles/{{ article._id }}" class="text-blue-600 hover:underline">
                            {{ article.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-gray-400 italic">Aucun article visible.</p>
        {% endif %}
    </div>
</section>
{% endblock %}
