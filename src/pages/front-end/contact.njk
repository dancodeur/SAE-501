{% extends "layouts/front-end/base.njk" %}

{% block title %}Contact
{% endblock %}
{% set bubble_color = "jaune" %}

{% block main %}

{% set  bubble_color="contact" %}

    <div>
        <h1 class="text-xl font-bold lg:col-span-2 mt-6 lg:mt-0">Plus d'infos sur la formation ? <br> Contactez-nous </h1>
        <p>Texte here !!!</p>
    </div>
    <div class="mx-auto p-6 flex">
        <form action="#" method="">
            <div class="mb-4">
                <label for="prenom" class="block text-sm font-medium text-gray-700">
                    Prénom
                </label>
                <input
                    type="text"
                    id="prenom"
                    name="prenom"
                    class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Votre prénom"
                    required
                />
            </div>

            <div class="mb-4">
                <label for="nom" class="block text-sm font-medium text-gray-700">
                    Nom de famille
                </label>
                <input
                    type="text"
                    id="nom"
                    name="nom"
                    class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Votre nom"
                    required
                />
            </div>

            <div class="mb-4">
                <label for="email" class="block text-sm font-medium text-gray-700">
                    Adresse e-mail
                </label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Votre e-mail"
                    required
                />
            </div>

            <div class="mb-4">
                <label for="message" class="block text-sm font-medium text-gray-700">
                    Message
                </label>
                <textarea
                    id="message"
                    name="message"
                    rows="4"
                    class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                    placeholder="Votre message"
                    required
                ></textarea>
            </div>

            <div class="mb-4 flex space-y-4">
                <span class="text-sm font-medium text-gray-700">
                    Je suis
                </span>
                <div class="space-y-2 flex">
                    <div>
                        <label class="inline-flex items-center">
                            <input
                            type="radio"
                            name="statut"
                            value="ne_souhaite_pas_preciser"
                            class="text-blue-600 border-gray-300 focus:ring-blue-500"
                            />
                            <span class="ml-2">Je ne souhaite pas le préciser</span>
                        </label>
                    </div>
                    <div>
                        <label class="inline-flex items-center">
                            <input
                            type="radio"
                            name="statut"
                            value="etudiant"
                            class="text-blue-600 border-gray-300 focus:ring-blue-500"
                            />
                            <span class="ml-2">Étudiant / Étudiante</span>
                        </label>
                    </div>
                    <div>
                        <label class="inline-flex items-center">
                            <input
                            type="radio"
                            name="statut"
                            value="parent"
                            class="text-blue-600 border-gray-300 focus:ring-blue-500"
                            />
                            <span class="ml-2">Parent</span>
                        </label>
                    </div>
                    <div>
                        <label class="inline-flex items-center">
                            <input
                            type="radio"
                            name="statut"
                            value="autre"
                            class="text-blue-600 border-gray-300 focus:ring-blue-500"
                            />
                            <span class="ml-2">Autre</span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="mt-6">
            <button
                type="submit"
                class="w-full px-4 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded-md shadow focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
                Envoyer
            </button>
            </div>
        </form>
    </div>

{% endblock %}
